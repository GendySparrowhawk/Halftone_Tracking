<div class="comic-details">
  <h1>{{comic.title}}</h1>
  <p># {{comic.issue}}</p>
  <p>Release Date:
    {{#if comic.releaseDate}}{{formatDate
        comic.releaseDate
      }}{{else}}N/A{{/if}}</p>
  <p><strong>Series: </strong>
    {{#if comic.series.length}}{{comic.series.title}}{{else}}N/A{{/if}}</p>

  {{#if comic.variants.length}}
    <h2>Variants</h2>
    <ul>
      {{#each comic.variants}}
        <li>
          <h3>{{this.name}}</h3>
          <p><strong>Incentive:</strong>
            {{#if this.isIncentive}}Yes{{else}}No{{/if}}</p>
          {{#if this.coverImage}}
            <img src="{{this.coverImage}}" alt="{{this.name}}" />
          {{/if}}
        </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if comic.authors.length}}
    <h2>Authors</h2>
    <ul>
      {{#each comic.authors}}
        <li>{{this.name}}</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if comic.artists.length}}
    <h2>Artists</h2>
    <ul>
      {{#each comic.artists}}
        <li>{{this.name}}</li>
      {{/each}}
    </ul>
  {{/if}}
</div>
<div class="variant form">
  <h2>Add a Variant Cover</h2>
  <form
    class="variant-form"
    action="/comics/variant"
    method="POST"
    enctype="multipart/form-data"
  >
    {{#each errors}}
      <p class="error">{{this}}</p>
    {{/each}}
    <input
      type="text"
      name="name"
      placeholder="name: eg:Jim Lee Cardstock 1:25"
    />
    <input type="file" name="coverImage" />
    <input type="checkbox" name="isIncentive" placeholder="Incentive Cover" />
    <button calss="my-button">Create Variant</button>
  </form>
</div>

<div class="add-details">
  <form
    class="add-details-form"
    action="/comics/update"
    method="UPDATE"
    enctype="multipart/form-data"
  >
  <input type="text" name="title" placeholder=`{{comic.title}}`>
  <input type="number" name="issue" placeholder=`{{comic.issue}}`>
  <input type="date" name="releaseDate" placeholder=`{{comic.releaseDate}}`>
  <input type="text" name="series" placeholder=`{{comic.series.title}}`>
  </form>
</div>